<html>
<head>
	<title>Javascript Demo - Debugged by Kristopher Merolla</title>
	<style>
		body {
			background: linear-gradient(#489CDF,white);
			font-family: monospace;
			color:white;
			font-size:50px;
			text-align: center;
			margin-top:20%;
		}

		#magic{
			color: #777;
			border-right: 1px solid #777;
			padding-right: 7px;
			display: inline;
			box-shadow: 10px 10px 5px #888888;
			margin-right: 10px;
		}
	</style>
</head>
<body>

	Coding is <div id="magic"></div>

	<script>

		var words = ["fun", "exciting", "about not giving up", "being helpful", "being open", "what I learned at CodingDojo!"], 
			el = document.getElementById('magic'), //the variable 'el' will be ran through for each letter to be displayed on the page in order
				//'el' is set here to the value between the div id="magic" arrows
			word_counter = 0, //
			character_counter = 0;

		function updateText()
		{
			if(words[word_counter][character_counter]==" ") {
				console.log("found it"); //this is used for debugging
				el.innerHTML = el.innerHTML + '&nbsp';
				character_counter++;
			}

			else {
				el.innerHTML = el.innerHTML+words[word_counter][character_counter++]; //el steps through each letter here
			}

			// below used for debugging (like t diagram)
			console.log("word_counter",word_counter);
			console.log("character_counter",character_counter);
			console.log("el",el);
			console.log("el.innerHTML",el.innerHTML);
			console.log("el.innerHTML.length",el.innerHTML.length);
			//end debug

			if(character_counter == words[word_counter].length+1)
			{
				word_counter++; 	//choose a different word
				character_counter = 0;	//start over with the first character of the word
				el.innerHTML = '';  //set the html to be blank

				//if we're displaying the last word, go back to the first word
				if(word_counter == words.length) {
					word_counter = 0;
				}
			}
		}

		setInterval(updateText,300); //this will set how quickly the code runs through the text

	</script>

</body>

</html>
